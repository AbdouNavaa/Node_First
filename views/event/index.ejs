<%- include('../partials/header')-%>
<%- include('../partials/navbar')-%>
    <div class="container">

       <div class="row mt-3">
        <div class="col md-12">
            <%- include('../partials/flashMessage')-%>
        </div>
       </div>
       <% chunk.forEach((events) =>{%>
        <div class="row mt-5">
            <% events.forEach((event) =>{%>
                <% if ((user) && (user.id == event.user_id)){%>
           <div class="col-sm-6 col-md-4">
            <div class="card text-center"  >
                <div class="card-body" >
                    <h5 class="card-title " style="font-style: italic;"><%= event.title%></h5>
                    <p class="card-text"><%= event.description%></p>
                    <p class="card-title" style="font-style: italic;"><%= event.location%></p>
                    <!-- <p  style="font-style: italic;"><%= event.date%></p> -->
                    <a href="<%= '/events/' + event.id%>" class="btn btn-dark">Show More</a>
              </div>
           </div>
        </div>
        <% }%>
       <% })%>
    </div>
    <% })%>

   
    <%- include('../partials/footer')-%>

   