<%- include('../partials/header')-%>
<%- include('../partials/navbar')-%>
    
<div class="container">
    <div class="row mt-4">
    <div class="col-md-6 offset-md-2">
        <div class="display-4">Add New Event:</div>
        <hr>
        <%- include('../partials/flashMessage')-%>
       

        <form action="/matieres/update" method="post" >
           
            <div class="form-group">
                <label for="prof">Prof</label>
                <select name="prof" id="prof" class="form-control">
                    <option value=""><%= matiere.prof.nom%></option>
                    <% teachers.forEach(function(teacher) { %>
                      <option value="<%= teacher._id %>"><%= teacher.nom %></option>
                    <% }) %>
                </select>
              </div>
                            
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" id="name" class="form-control" value="<%= matiere.name%>">
            </div>

            
            <div class="form-group">
                <label for="coef">coef</label>
                <input type="number" name="coef" id="coef" class="form-control" value="<%= matiere.coef%>">
            </div>
            

            <div class="form-group mt-3" >
                <button type="submit" class="btn btn-info" style="width: 550px;border-radius: 20px;">Update</button>
                <a href="<%= '/matieres/' + matiere.id%>" class="btn btn-dark"
                    style="width: 550px;border-radius: 20px;margin-top:1%">Back</a>
            </div>
        </form>
    </div>
</div>
</div>

    <%- include('../partials/footer')-%>